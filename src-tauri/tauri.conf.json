{
  "build": {
    "beforeBuildCommand": "npm run build:web",
    "beforeDevCommand": "npm run dev:web",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Enderfall Hub",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "removeFile": true,
        "scope": ["$APPDATA/Enderfall/**", "$LOCALDATA/Enderfall/**"]
      },
      "http": {
        "all": true,
        "scope": [
          "https://wsjjasupxnzinvopxgum.supabase.co/*",
          "https://lh3.googleusercontent.com/*",
          "https://cdn.discordapp.com/*"
        ]
      },
      "shell": {
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Enderfall Hub",
        "width": 1440,
        "height": 900,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "identifier": "com.enderfall.appbrowser",
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/256x256.png",
        "icons/256x256@2x.png",
        "icons/512x512.png",
        "icons/icon.ico"
      ],
      "windows": {
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "headerImage": "installer-assets/nsis-header.bmp",
          "sidebarImage": "installer-assets/nsis-sidebar.bmp",
          "installMode": "perMachine",
          "displayLanguageSelector": false
        },
        "wix": {
          "bannerPath": "installer-assets/wix-banner.bmp",
          "dialogImagePath": "installer-assets/wix-dialog.bmp"
        }
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.ico"
    }
  }
}
